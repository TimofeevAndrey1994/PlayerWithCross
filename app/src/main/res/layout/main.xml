<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/activity_view"
    android:background="@drawable/shape"
    tools:context="com.timofeev.playerwithcross.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <SeekBar
            android:layout_marginTop="16dp"
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progressDrawable="@drawable/seekbar_prograssbar"
            android:thumbTintMode="multiply"
            android:thumb="@drawable/seekbar_thumb"
            android:max="8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Value"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textViewForValue"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="" />

    </LinearLayout>

        <Button
            android:id="@+id/file1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/buttonshape"
            android:text="@string/choosingFile1" />

        <Button
            android:id="@+id/file2"
            android:layout_width="match_parent"
            android:layout_margin="16dp"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonshape"
            android:text="@string/choosingFile2" />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <Button
               android:id="@+id/buttonPlay"
               android:layout_marginTop="16dp"
               android:layout_marginLeft="100dp"
               android:layout_marginBottom="10dp"
               android:layout_gravity="center"
               android:background="@drawable/buttonplaysop"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/play"
               android:enabled="false"
               />

           <Button
               android:id="@+id/buttonStop"
               android:layout_marginTop="16dp"
               android:layout_marginRight="75dp"
               android:layout_marginBottom="10dp"
               android:layout_gravity="center"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/stop"
               android:background="@drawable/buttonplaysop"
               android:enabled="false"
               />

       </LinearLayout>




    </LinearLayout>


</RelativeLayout>
